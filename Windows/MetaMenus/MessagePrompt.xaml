<Window x:Class="TheUndergroundTower.Windows.MetaMenus.windowMessage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TheUndergroundTower.Windows.MetaMenus"
        mc:Ignorable="d"
        Title="MessagePrompt"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner">
    <StackPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <TextBlock x:Name="txtMessagePrompt" Margin="15,10,15.333,0" TextAlignment="Center" TextWrapping="Wrap" Text="{Binding message}"/>
        </Grid>
        <Button x:Name="btnMessagePrompt" Grid.Row="2"  Height="23" Margin="100,5,100.333,10" Content="Proceed" Click="MessagePrompt_Click"/>
    </StackPanel>
</Window>
