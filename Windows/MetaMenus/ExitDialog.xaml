<Window x:Name="Exit_Game" x:Class="WpfApp1.Windows.ExitDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.Windows"
        mc:Ignorable="d"
        WindowStartupLocation="CenterOwner"
        Title="Exit Game" Height="88" Width="298.042" ScrollViewer.VerticalScrollBarVisibility="Disabled" ResizeMode="NoResize">
    <StackPanel VerticalAlignment="Bottom">
        <TextBlock Height="24" TextWrapping="Wrap" Text="Are you sure you want to exit the game?" Width="218" Margin="37,0,37.667,0"/>
        <Grid Margin="0,0,0.333,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="Exit_Game1" Content="Confirm" Click="Exit_Game1_Click" Grid.Column="0" Margin="10,0,10,10"/>
            <Button x:Name="Return" Content="Return" Grid.Column="1" Click="Return_Click" Margin="10,0,10,10"/>
        </Grid>
    </StackPanel>
</Window>
